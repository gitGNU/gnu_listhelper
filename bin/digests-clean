#!/bin/sh

NOTIFY_ADDR=bob

PATH=$HOME/bin:/usr/local/bin:$PATH

trap 'rm -f $LOGFILE' EXIT
LOGFILE=$(mktemp) || exit 1

if [ ! -t 0 ]; then
    exec >$LOGFILE 2>&1 </dev/null
fi

find $HOME/var/digests -type f -mtime +120 -exec rm -f {} +

if [ -s $LOGFILE ]; then
    mailx -s "digest-clean output" $NOTIFY_ADDR < $LOGFILE
fi

exit 0
