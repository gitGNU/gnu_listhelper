#!/bin/sh

# In mutt it is much easier to say "|saf" than to say "|sa-learn --forget".

export LC_ALL=C

# Configure how sa-learn will be run.
#sa_learn_forget="sa-learn --forget"
sa_learn_forget="spamc -x -d 192.168.240.11 --learntype=forget"

$sa_learn_forget "$@"
exit 0

